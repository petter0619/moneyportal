@using MoneyPortalMain.DTOs
@model RegisterDto
@Html.AntiForgeryToken()
@{
    Layout = "_RegistrationLayout";
    ViewData["Title"] = "Register Account";
}

<form method="POST" asp-action="Register" class="form" autocomplete="off" autofill="off">
    <div class="form__group">
        <input class="form__input" type="text" asp-for="FirstName">
        <label asp-for="FirstName" class="form__label">
            First Name
        </label>
        <span asp-validation-for="FirstName" class="form__validation"></span>
    </div>
    <div class="form__group">
        <input class="form__input" type="text" asp-for="LastName">
        <label asp-for="LastName" class="form__label">
            Last Name
        </label>
        <span asp-validation-for="LastName" class="form__validation"></span>
    </div>
    <div class="form__group">
        <input class="form__input" type="text" asp-for="DisplayName">
        <label asp-for="DisplayName" class="form__label">
            Display Name
        </label>
        <span asp-validation-for="DisplayName" class="form__validation"></span>
    </div>
    <div class="form__group">
        <input class="form__input" type="email" asp-for="Email">
        <label asp-for="Email" class="form__label form__label--email">
            Email
        </label>
        <span asp-validation-for="Email" class="form__validation"></span>
    </div>
    <div class="form__group">
        <input class="form__input" type="password" asp-for="Password">
        <label asp-for="Password" class="form__label form__label--password">
            Password
        </label>
        <span asp-validation-for="Password" class="form__validation"></span>
    </div>
    <div class="form__group">
        <input type="submit" value="Register" class="form__button">
    </div>

    <p class="form__text">
        Already have an account? <a asp-controller="Account" asp-action="Login" class="form__link">Log In</a>
    </p>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
