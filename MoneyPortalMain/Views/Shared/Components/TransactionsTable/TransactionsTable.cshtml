@model List<Transaction>

<link rel="stylesheet" href="~/css/TransactionsTable.css" asp-append-version="true" />

<div class="transactionTable">
    <div class="transactionTable__row transactionTable__row--header">
        <div class="transactionTable__cell">Amount</div>
        <div class="transactionTable__cell">Memo</div>
        <div class="transactionTable__cell">Date</div>
        <div class="transactionTable__cell"></div>
    </div>
    @foreach(Transaction transaction in Model)
    {
        <div class="transactionTable__row">
            <div class="transactionTable__cell">
                <span>
                    @String.Format("{0:N}", transaction.Amount) kr
                </span>
                <span class="transactionTable__smallText">@transaction.Type</span>
            </div>
            <div class="transactionTable__cell">
                <span>@transaction.Memo</span>
                <span class="transactionTable__smallText">@transaction.Store</span>
            </div>
            <div class="transactionTable__cell">
                <span>@transaction.Date.ToString("yyyy-MM-dd")</span>
                <span class="transactionTable__smallText"></span>
            </div>
            <div class="transactionTable__cell transactionTable__cell--buttons">
                <button class="transactionTable__iconButton color-green"><i class="fa-solid fa-pen-to-square"></i></button>
                <button class="transactionTable__iconButton color-maroon"><i class="fa-solid fa-trash-can"></i></button>
            </div>
        </div>
    }
    <div class="transactionTable__footer">
        <div class="transactionTable__showInfo">
            Showing 1 to 10 of 14 transactions
        </div>
        <div class="transactionTable__pagination">
            <button class="transactionTable__paginationButton" disabled>Previous</button>
            @for(int i = 1; i < 3 ;i++)
            {
                @if (i == 1)
                {
                    <button class="transactionTable__paginationButton transactionTable__paginationButton--currentPage">@i</button>
                }
                else
                {
                    <button class="transactionTable__paginationButton">@i</button>
                }
            }
            <button class="transactionTable__paginationButton">Next</button>
        </div>
    </div>
</div>
