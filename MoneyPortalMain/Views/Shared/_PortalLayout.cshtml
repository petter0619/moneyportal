<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Money Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PortalLayout.css" asp-append-version="true" />
</head>
<body>
    <div>
        <header class="portal-header background-light">
            <span class="portal-header__logo">
                <strong class="portal-header__logo--green">Money</strong>
                <strong>Portal</strong>
            </span>
            <div class="sidebar__trigger">
                <span class="sidebar__burger"></span>
            </div>
        </header>
        <div class="portal-container">
            @(await Component.InvokeAsync("PortalSidebar")) 
            <main class="portal-content background-dark">
                <div class="portal-content__title-container background-light">
                    <h2 class="portal-content__title">@ViewData["Title"]</h2>
                </div>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
